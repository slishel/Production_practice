<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/textViewRequestId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: 123"
        android:textSize="16sp"
        android:textColor="#212121"
        android:textStyle="bold"
        android:paddingBottom="4dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата: "
            android:textSize="14sp"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/textViewCreationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-01-09"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оборудование: "
            android:textSize="14sp"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/textViewEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Компьютер"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тип: "
            android:textSize="14sp"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/textViewFaultType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Не работает"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Статус: "
            android:textSize="14sp"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выполнен"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата завершения: "
            android:textSize="14sp"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/textViewDateCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание: Замените видеокарту"
        android:textSize="14sp"
        android:textColor="#757575"
        android:paddingTop="4dp"/>
</LinearLayout>